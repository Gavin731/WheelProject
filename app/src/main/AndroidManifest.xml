<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.common.wheelproject">

    <application
        android:name=".CommonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WheelProject">
        <meta-data
            android:name="design_width_in_dp"
            android:value="600" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="900" />


        <activity android:name=".home.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".test.activity.CardViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".test.activity.CoordinatorLayoutActivity"
            android:theme="@style/Theme.GMDNoTitle"
            android:screenOrientation="portrait"/>
        <activity android:name=".test.activity.RefreshLayoutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".test.activity.HttpLayoutActivity"
            android:screenOrientation="portrait"/>
    </application>


</manifest>