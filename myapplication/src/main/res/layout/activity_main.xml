<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/init_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初始化sdk"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/show_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示插屏广告"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/show_ad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示插屏广告2"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/show_kp_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示开屏广告"
        android:layout_marginTop="100dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/show_info_image_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示信息流广告"
        android:layout_marginTop="150dp"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/http_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示激励视频"
        android:layout_marginTop="200dp"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/show_info_image_ad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示信息流广告2"
        android:layout_marginTop="250dp"
        android:textAllCaps="false" />
    <FrameLayout
        android:id="@+id/splashContainer"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/infoContainer"
        android:layout_width="400dp"
        android:layout_marginTop="300dp"
        android:layout_height="200dp"/>
    <FrameLayout
        android:id="@+id/infoContainer2"
        android:layout_width="400dp"
        android:layout_marginTop="550dp"
        android:layout_height="200dp"/>

</FrameLayout>